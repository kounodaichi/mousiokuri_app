<body id="sheet">
<br>
<br>
<br>
<div style="text-align:center">
  <h1 class="show">投稿詳細</h1>
</div>
<h3 class="show2"><%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></h3>
<h3 class ="show1"><%= @post.user.email %>→<%= @post.category %></h3>
<br>
<div class="title">
  <h3 class="show3">タイトル</h3>
  <h3 class="post-title">【<%= @post.title %>】</h3>
</div>
<h3><%= @post.content %></h3>
<% if @post.image? %>
  <p><%= image_tag @post.image.url %></p>
<% end %>
<hr>
<h2>メッセージ</h2>
<%= form_with(model:[@post, @comment], method: :post) do |f| %>
  <h3>
    <%= f.text_area :comment_content %>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.submit "送信" %>
  </h3>
  <hr>
<% end %>

<% @comments.each do |comment| %>
  <h3>
    【<%= comment.user.email %>】<br>
    <%= comment.created_at.strftime("%Y-%m-%d %H:%M") %>
    <%= comment.comment_content %>  
  </h3>
  <hr>
<% end %>

